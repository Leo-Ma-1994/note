<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/avrcp14_status_bar" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/avrcp14_status_bar_1" android:layout_width="match_parent" android:layout_height="50dp">
            <Button android:textSize="30dp" android:gravity="center" android:id="@+id/button_avrcp14_path_return" android:layout_width="50dp" android:layout_height="match_parent" android:text="&lt;"/>
            <Button android:textSize="30dp" android:gravity="center" android:id="@+id/button_avrcp14_player" android:layout_width="100dp" android:layout_height="match_parent" android:text="None"/>
            <TextView android:textSize="30dp" android:gravity="center" android:id="@+id/text_avrcp_browse_path" android:layout_width="match_parent" android:layout_height="match_parent" android:text=""/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textColor="#fff" android:id="@+id/title_players" android:background="#666" android:paddingLeft="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Players"/>
            <ListView android:id="@+id/list_avrcp14_players" android:layout_width="match_parent" android:layout_height="match_parent" android:stackFromBottom="false" android:layout_weight="1"/>
            <TextView android:textColor="#fff" android:id="@+id/title_folders" android:background="#666" android:paddingLeft="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Folder"/>
            <ListView android:id="@+id/list_avrcp14_folders" android:layout_width="match_parent" android:layout_height="match_parent" android:stackFromBottom="false" android:layout_weight="1"/>
            <TextView android:textColor="#fff" android:id="@+id/title_media" android:background="#666" android:paddingLeft="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Media"/>
            <ListView android:id="@+id/list_avrcp14_media" android:layout_width="match_parent" android:layout_height="match_parent" android:stackFromBottom="false" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="30dp" android:gravity="center" android:id="@+id/text_state_browse" android:layout_width="match_parent" android:layout_height="50dp" android:minWidth="100dp" android:text="State" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="100dp">
            <Button android:textSize="30dp" android:id="@+id/button_enter" android:layout_width="match_parent" android:layout_height="50dp" android:text="Enter"/>
            <Button android:textSize="30dp" android:id="@+id/button_back" android:layout_width="match_parent" android:layout_height="50dp" android:text="Back"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
