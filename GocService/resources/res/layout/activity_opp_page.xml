<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/button_opp_receive_confirm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Receive"/>
            <Button android:id="@+id/button_opp_receive_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Canael"/>
        </LinearLayout>
        <TextView android:id="@+id/text_received_file_name" android:layout_width="match_parent" android:layout_height="70dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="30dp" android:text="OPP State : " android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/text_state_opp" android:layout_width="match_parent" android:layout_height="30dp" android:text="" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="30dp" android:text="Device Address : " android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/text_opp_connected_address" android:layout_width="match_parent" android:layout_height="30dp" android:text="" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="30dp" android:text="Device Name : " android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/text_opp_device_name" android:layout_width="match_parent" android:layout_height="30dp" android:text="" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="30dp" android:text="Receive File : " android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/text_opp_receive_file" android:layout_width="match_parent" android:layout_height="30dp" android:text="" android:layout_weight="1"/>
        </LinearLayout>
        <Button android:gravity="center" android:id="@+id/button_opp_file_path" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Set File Path" android:layout_weight="1"/>
        <Button android:gravity="center" android:id="@+id/button_back" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Back" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
