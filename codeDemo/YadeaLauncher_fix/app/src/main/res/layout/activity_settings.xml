<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/setting_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/btn_setting_return"
        android:layout_width="234dp"
        android:layout_height="60dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_fault_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_fault_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fault_return"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="60dp"
        android:text="DASHBOARD"
        android:textColor="#FFFFFFFF"
        android:textSize="19dp"
        android:fontFamily="@font/micro_technic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_language"
        android:layout_width="32dp"
        android:layout_height="22dp"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="217dp"
        android:text="语言"
        android:textColor="#999999"
        android:textSize="16dp"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="32dp"
        android:layout_height="22dp"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="217dp"
        android:textSize="16dp"
        android:textColor="#999999"
        android:text="单位"
        android:fontFamily="@font/pf_regular"

        app:layout_constraintStart_toEndOf="@+id/txt_language"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_cache"
        android:layout_width="32dp"
        android:layout_height="22dp"
        android:layout_marginStart="209dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="217dp"
        android:textSize="16dp"
        android:textColor="#999999"
        android:text="缓存"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toEndOf="@+id/txt_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_bluetooth"
        android:layout_width="64dp"
        android:layout_height="22dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="217dp"
        android:textSize="16dp"
        android:textColor="#999999"
        android:text="蓝牙设置"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toEndOf="@+id/txt_cache"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="417dp"
        android:layout_marginLeft="417dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/btn_setting_save"
        android:textSize="19dp"
        android:textColor="#4AE6C1"
        android:text="SAVE"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="SETTINGS"
        android:textColor="#ffffff"
        android:textSize="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioButton
        android:id="@+id/rbtn_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="274dp"
        android:text="EN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RadioButton
        android:id="@+id/rbtn_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="274dp"
        android:text="中文"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbtn_kilometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="369dp"
        android:layout_marginLeft="369dp"
        android:layout_marginTop="274dp"
        android:shadowColor="#ffffff"
        android:text="公里"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbtn_imperial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="457dp"
        android:layout_marginLeft="457dp"
        android:layout_marginTop="274dp"
        android:text="英制"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_cache_display"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="610dp"
        android:layout_marginLeft="610dp"
        android:layout_marginTop="271dp"
        android:text="58.94M"
        android:textColor="#4AE6C1"
        android:textSize="18dp"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_find_device"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginStart="794dp"
        android:layout_marginLeft="794dp"
        android:layout_marginTop="271dp"
        android:text="查找设备"
        android:textColor="#4AE6C1"
        android:textSize="18dp"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_automatic_backlight"
        android:layout_width="64dp"
        android:layout_height="22dp"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="334dp"
        android:text="自动背光"
        android:textSize="16dp"
        android:textColor="#999999"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_tire_pressure_display"
        android:layout_width="64dp"
        android:layout_height="22dp"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="334dp"
        android:text="胎压显示"
        android:textSize="16dp"
        android:textColor="#999999"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_clear_small_mileage"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_marginStart="369dp"
        android:layout_marginLeft="369dp"
        android:layout_marginTop="334dp"
        android:text="小里程清零"
        android:textSize="16dp"
        android:textColor="#999999"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_volume_adjustment"
        android:layout_width="64dp"
        android:layout_height="22dp"
        android:layout_marginStart="610dp"
        android:layout_marginLeft="610dp"
        android:layout_marginTop="334dp"
        android:text="音量调节"
        android:textSize="16dp"
        android:textColor="#999999"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="686dp"
        android:layout_marginLeft="686dp"
        android:layout_marginTop="321dp"
        android:text="16"
        android:textSize="34dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Switch
        android:id="@+id/switch_automatic_backlight"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="388dp"
        android:thumbOffset="-3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:thumb="@drawable/setting_swith_thumb"
        android:track="@drawable/setting_swith"/>
    <Switch
        android:id="@+id/switch_tire_pressure_display"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="388dp"
        android:thumbOffset="-3dp"
        android:thumb="@drawable/setting_swith_thumb"
        android:track="@drawable/setting_swith"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txt_small_mileage"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="369dp"
        android:layout_marginLeft="369dp"
        android:layout_marginTop="391dp"
        android:text="3425km"
        android:textColor="#4AE6C1"
        android:textSize="18dp"
        android:fontFamily="@font/pf_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="285dp"
        android:layout_height="35dp"
        android:layout_marginStart="610dp"
        android:layout_marginLeft="610dp"
        android:layout_marginTop="388dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/setting_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/setting_thumb_ys"
        android:thumbOffset="-1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>