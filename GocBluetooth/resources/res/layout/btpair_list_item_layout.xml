<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="80dp">
    <ImageView android:id="@+id/iv_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/ico_6044_shoujtb"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/iv_phone">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#fff" android:ellipsize="end" android:id="@+id/bt_name" android:layout_width="150dp" android:layout_height="wrap_content" android:text="qiku" android:singleLine="true"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/bt_address_goc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="address"/>
        </LinearLayout>
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/tv_isconnect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="正在连接..."/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_remove" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/btn_delete_selector" android:layout_alignParentRight="true"/>
    <View android:background="#fff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
