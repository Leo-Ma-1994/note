<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_call_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ico_1140_jilu_weijie" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_call_people_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/iv_call_status" android:layout_centerVertical="true">
        <TextView android:textSize="25sp" android:textColor="#fff" android:id="@+id/tv_miss_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="客服电话"/>
        <TextView android:textSize="16sp" android:textColor="#fff" android:id="@+id/tv_miss_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10021"/>
    </LinearLayout>
    <TextView android:textSize="23sp" android:id="@+id/tv_miss_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2016/1/9" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
