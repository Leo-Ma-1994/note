<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/beijing" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
        <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_incoming_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_incoming_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tv_incoming_name" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_incoming_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="来电..." android:layout_below="@+id/tv_incoming_number" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="00:00" android:layout_below="@+id/tv_incoming_status" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/acc_hang" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_connect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="150dp" android:layout_marginBottom="50dp" android:src="@drawable/btn_jianpan_bohao_selector" android:layout_alignParentBottom="true"/>
            <ImageView android:id="@+id/iv_hangup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="150dp" android:layout_marginBottom="50dp" android:src="@drawable/btn_jianpan_guaduan_selector" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_hangup_avtive" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="150dp" android:layout_marginBottom="50dp" android:src="@drawable/btn_jianpan_guaduan_selector" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_qieshengdao_incoming" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80dp" android:src="@drawable/btn_jianpan_qieshengdao_selector" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/iv_bujingyin_incoming" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="80dp" android:src="@drawable/btn_jianpan_bujingyin_selector" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
