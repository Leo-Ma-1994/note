<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#345876" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_start_search_device" android:layout_width="0dp" android:layout_height="wrap_content" android:text="搜索周边设备" android:layout_weight="1"/>
        <Button android:id="@+id/btn_stop_search_device" android:layout_width="0dp" android:layout_height="wrap_content" android:text=" 停止搜索" android:layout_weight="1"/>
        <Button android:id="@+id/btn_paired_device_list" android:layout_width="0dp" android:layout_height="wrap_content" android:text="配对设备列表" android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ListView android:id="@+id/lv_device_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ListView android:id="@+id/lv_paired_device_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
