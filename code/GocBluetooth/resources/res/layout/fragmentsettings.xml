<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/ScrollView" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_gravity="center_vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/bluetooth_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开关" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/bluetooth_image_switch" android:layout_width="60dp" android:layout_height="30dp" android:src="@drawable/ico_4158_guan" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="设备名"/>
            <com.goodocom.gocsdk.view.MyEditText android:textSize="20sp" android:textColor="#fff" android:id="@+id/et_device_name" android:background="@drawable/btn_6043_beij" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="PIN码"/>
            <com.goodocom.gocsdk.view.MyEditText android:textSize="20sp" android:textColor="#fff" android:id="@+id/et_pin_code" android:background="@drawable/btn_6043_beij" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/auto_connect_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="蓝牙自动连接" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/auto_connect_switch" android:layout_width="60dp" android:layout_height="30dp" android:src="@drawable/ico_4158_guan" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="20sp" android:textColor="#fff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="蓝牙自动接听" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/auto_answer_switch" android:layout_width="60dp" android:layout_height="30dp" android:src="@drawable/ico_4158_guan" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IMEI:"/>
                <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/tv_imei" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
