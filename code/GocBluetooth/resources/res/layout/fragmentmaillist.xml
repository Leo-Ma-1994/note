<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
        <RelativeLayout android:id="@+id/rl_downloading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/flag_center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/match_bg" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/image_animation" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:src="@drawable/load_ico" android:layout_above="@+id/flag_center" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_contacts_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/flag_center" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ListView android:id="@+id/lv_content" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@null"/>
        <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_device_disconnect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请先连接设备" android:layout_centerInParent="true"/>
        <TextView android:textSize="23sp" android:textColor="#fff" android:id="@+id/tv_download" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击下载电话本" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
